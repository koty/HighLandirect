            <Label Content="{Binding Order.CustomerMasterSend.CustName}" Grid.Column="1" Margin="11,0,0,0" Grid.Row="11" FontFamily="MS Gothic" FontSize="20" />
        </Grid>
        
        <Label Content="{Binding ReportMemo}" Grid.Column="1" Margin="6,130,274,242" />
